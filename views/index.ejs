<!DOCTYPE html>
<html ng-app="BirdwatcherApp">
<head>
  <meta charset="UTF-8">
  <title>BirdWatchr</title>
  <script src="/bower_components/angular/angular.js"></script>
  <script src="/bower_components/jquery/dist/jquery.js"></script>
  <!-- // <script src="/js/main.js"></script> -->
  <script src="/js/birdwatcher_app.js"></script>
  <script src="/js/birdwatcher_controller.js"></script>
</head>
<body>
  <h1>Birds of NY</h1>
  <!-- <a href="/sightings/new">Spotted a bird?</a> -->
  <br> 
  <a href="/api/sightings"> API </a>


  <div ng-controller="BirdwatchersController as sites">

    <h2> Most Recent Sightings: </h2>

    <div ng-repeat="sighting in sites.all">
      <p> <strong> {{sighting.bird}} </strong>
        <br> Date: {{sighting.date}}
        <br> Address: {{sighting.address}}
        <br> Lat/Long: {{sighting.lat}}, {{sighting.lng}}
      </p>
    </div>


    <h3>Spotted a bird?</h3>
      <form ng-submit="sites.add()">
        <label> Name of Bird: </label>
        <input type="text" ng-model="sites.newBird">
        <br>
        <label> Date: </label>
        <input type="date" ng-model="sites.newDate">
        <br>
        <label> Address: </label>
        <input type="text" ng-model="sites.newAddress">
        <br>
        <input type="submit" value="Create">
      </form>

  <div>

</body>
</html>

